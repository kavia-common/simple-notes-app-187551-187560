# Frontend environment variables

# PUBLIC_INTERFACE
# Base URL for the backend API. This should point to the backend's BASE_PATH (default /api).
# Example: http://localhost:4000/api
REACT_APP_API_BASE=http://localhost:4000/api

# Alternate variable for API base (lower priority than REACT_APP_API_BASE)
REACT_APP_BACKEND_URL=

# Frontend URL used by backend CORS configuration (informational; set in backend .env)
REACT_APP_FRONTEND_URL=http://localhost:3000

# Optional: WebSocket URL (not used in this project)
REACT_APP_WS_URL=

# Optional: Node environment indicator
REACT_APP_NODE_ENV=development

# Disable Next telemetry if used by shared tooling (harmless here)
REACT_APP_NEXT_TELEMETRY_DISABLED=1

# Enable source maps during builds
REACT_APP_ENABLE_SOURCE_MAPS=true

# Port the React dev server runs on
REACT_APP_PORT=3000

# Trust proxy (not relevant to CRA dev server, informational)
REACT_APP_TRUST_PROXY=false

# Logging level for backend (informational for parity)
REACT_APP_LOG_LEVEL=dev

# Healthcheck path exposed by backend
REACT_APP_HEALTHCHECK_PATH=/health

# Feature flags and experiments (comma-separated, not used here)
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false
