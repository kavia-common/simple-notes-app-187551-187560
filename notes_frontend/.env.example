# Frontend environment variables for Notes Frontend
# Copy this file to `.env` and adjust values as needed.

# API base URL resolution order in code:
# 1) REACT_APP_API_BASE
# 2) REACT_APP_BACKEND_URL
# 3) default http://localhost:4000/api
REACT_APP_API_BASE=http://localhost:4000/api
# Optional fallback key recognized by the app (used if REACT_APP_API_BASE is not set)
REACT_APP_BACKEND_URL=http://localhost:4000/api

# The frontend's public URL (useful for other tooling or future integrations)
REACT_APP_FRONTEND_URL=http://localhost:3000

# Optional WebSocket URL if needed for future features; not used by current app
REACT_APP_WS_URL=

# Node env flags and common toggles
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_ENABLE_SOURCE_MAPS=true

# Dev server port and proxy trust flag (used by backend or infra; kept for consistency)
REACT_APP_PORT=3000
REACT_APP_TRUST_PROXY=false

# Logging level (for backend morgan; here for consistency)
REACT_APP_LOG_LEVEL=dev

# Healthcheck path informational (backend default is /health)
REACT_APP_HEALTHCHECK_PATH=/health

# Feature flags and experiments toggle (reserved keys)
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false
