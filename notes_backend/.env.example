# Backend environment variables for Notes Backend (Node + Express)

# Server
PORT=4000
BASE_PATH=/api

# CORS origin for the frontend (exact origin)
FRONTEND_URL=http://localhost:3000

# Compatibility keys (also read by backend where relevant)
REACT_APP_FRONTEND_URL=http://localhost:3000
REACT_APP_TRUST_PROXY=false
REACT_APP_LOG_LEVEL=dev
REACT_APP_HEALTHCHECK_PATH=/health

# Optional mirror of frontend API base (not required by backend, included for consistency)
REACT_APP_API_BASE=http://localhost:4000/api
REACT_APP_BACKEND_URL=http://localhost:4000/api
